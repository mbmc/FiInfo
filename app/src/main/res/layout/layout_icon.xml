<com.mbmc.fiinfo.ui.component.IconLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/icon_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:alpha="@dimen/icon_alpha"
        />

    <Space
        android:layout_width="10dp"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/icon_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</com.mbmc.fiinfo.ui.component.IconLayout>
