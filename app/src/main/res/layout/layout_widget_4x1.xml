<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/widget_icon"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:layout_gravity="center"
                android:alpha="@dimen/icon_alpha" />
        </FrameLayout>

        <Button
            android:id="@+id/widget_action_1"
            style="@style/AppTheme.WidgetButton" />

        <Button
            android:id="@+id/widget_action_2"
            style="@style/AppTheme.WidgetButton" />

        <Button
            android:id="@+id/widget_action_3"
            style="@style/AppTheme.WidgetButton" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle" />

    <TextView
        android:id="@+id/widget_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/TextViewStyle" />

</FrameLayout>
