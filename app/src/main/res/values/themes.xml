<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SignalInfo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/fi_blue</item>
        <item name="colorSecondary">@color/fi_blue</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="iconColor">@color/font_day</item>
        <item name="android:textColorSecondary">@color/font_day</item>
        <item name="android:textColorTertiary">@color/font_day</item>
    </style>

    <style name="Settings.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.Action" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_35</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Settings.Subtitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget" parent="android:style/Theme.DeviceDefault.DayNight">
        <item name="android:textColorTertiary">@color/font_day</item>
        <item name="android:tint">@color/font_day</item>
    </style>
</resources>